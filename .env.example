# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DEFAULT_PREFIX=!
OWNER_ID=your_discord_user_id

# Bot Settings
BOT_NAME=KazeBeats
BOT_VERSION=1.0.0
BOT_DESCRIPTION=High-performance Discord music bot with gaming-inspired design

# Audio Settings
AUDIO_BITRATE=320
AUDIO_SAMPLE_RATE=48000
MAX_VOLUME=200
DEFAULT_VOLUME=100

# Database Configuration
DB_TYPE=sqlite
DB_PATH=/app/data/kazebeats.db
# For PostgreSQL (optional):
# DB_TYPE=postgresql
# DB_HOST=db
# DB_PORT=5432
# DB_NAME=kazebeats
# DB_USER=kazebeats_user
# DB_PASSWORD=your_secure_password

# Redis Cache (optional)
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys
YOUTUBE_API_KEY=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SOUNDCLOUD_CLIENT_ID=
GENIUS_API_TOKEN=

# Web Dashboard
WEB_ENABLED=true
WEB_PORT=8080
WEB_SECRET_KEY=your_secret_key_here
WEB_HOST=0.0.0.0

# Performance Settings
MAX_QUEUE_SIZE=1000
CACHE_SIZE_MB=500
PRELOAD_NEXT_TRACK=true
AUTO_DISCONNECT_TIMEOUT=300

# Features Toggle
ENABLE_EFFECTS=true
ENABLE_LYRICS=true
ENABLE_PLAYLISTS=true
ENABLE_ANALYTICS=true
ENABLE_AUTO_DJ=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/kazebeats.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Docker Settings
CONTAINER_NAME=kazebeats
RESTART_POLICY=unless-stopped